<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="313dp"
        android:layout_height="237dp"
        android:layout_marginStart="49dp"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="49dp"
        android:layout_marginRight="49dp"
        android:layout_marginBottom="13dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/download" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="362dp"
        android:layout_height="26dp"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginBottom="16dp"
        android:text="Select the Currency you want to convert from..."
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="362dp"
        android:layout_height="26dp"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:text="Select the Currency you want to convert to..."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <RadioGroup
        android:layout_width="362dp"
        android:layout_height="40dp"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginBottom="11dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0">

        <RadioButton
            android:id="@+id/usdFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="18px"
            android:onClick="onFromRadio"
            android:text="USD" />

        <RadioButton
            android:id="@+id/eurFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="18px"
            android:onClick="onFromRadio"
            android:text="EUR" />

        <RadioButton
            android:id="@+id/gbpFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="18px"
            android:onClick="onFromRadio"
            android:text="GBP" />

        <RadioButton
            android:id="@+id/inrFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="18px"
            android:onClick="onFromRadio"
            android:text="INR" />

        <RadioButton
            android:id="@+id/audFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="18px"
            android:onClick="onFromRadio"
            android:text="AUD" />

    </RadioGroup>

    <EditText
        android:id="@+id/textField"
        android:layout_width="362dp"
        android:layout_height="45dp"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:ems="10"
        android:hint="Enter the value here..."
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <RadioGroup
        android:layout_width="362dp"
        android:layout_height="40dp"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/textField"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">


        <RadioButton
            android:id="@+id/usdTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="18px"
            android:onClick="onToRadio"
            android:text="USD" />

        <RadioButton
            android:id="@+id/eurTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="18px"
            android:onClick="onToRadio"
            android:text="EUR" />

        <RadioButton
            android:id="@+id/gbpTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="18px"
            android:onClick="onFromRadio"
            android:text="GBP" />

        <RadioButton
            android:id="@+id/inrTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="18px"
            android:onClick="onFromRadio"
            android:text="INR" />

        <RadioButton
            android:id="@+id/audTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="18px"
            android:onClick="onFromRadio"
            android:text="AUD" />

    </RadioGroup>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="154dp"
        android:layout_marginLeft="154dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="154dp"
        android:layout_marginRight="154dp"
        android:layout_marginBottom="139dp"
        android:onClick="onSubmit"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textField" />

</androidx.constraintlayout.widget.ConstraintLayout>